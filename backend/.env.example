# ============================================================
# AI Ignite Note - Environment Configuration Template
# ============================================================
# Copy this file to .env and update with your actual values
# For Docker deployment, use the root .env file instead

# ============================================================
# Database Configuration
# ============================================================
# PostgreSQL connection URL
# For local development: postgresql://user:password@localhost:5432/dbname
# For Docker: postgresql://aiignite:aiignite_password@postgres:5432/ai_ignite_note
DATABASE_URL="postgresql://aiignite:aiignite_password@localhost:5432/ai_ignite_note?schema=public"

# ============================================================
# Server Configuration
# ============================================================
NODE_ENV="development"
PORT=4000
CORS_ORIGIN="http://localhost:3000"

# ============================================================
# JWT Authentication
# ============================================================
# IMPORTANT: Change these secrets in production!
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-this-in-production"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# ============================================================
# AI Provider Configuration
# ============================================================
# Get your API keys from:
# Google Gemini: https://makersuite.google.com/app/apikey
# Anthropic Claude: https://console.anthropic.com/
# OpenAI: https://platform.openai.com/api-keys

# Google Gemini (Default Provider)
GOOGLE_AI_API_KEY="your-gemini-api-key"

# Anthropic Claude
ANTHROPIC_API_KEY="your-anthropic-api-key"

# OpenAI GPT
OPENAI_API_KEY="your-openai-api-key"

# Local AI Providers (Optional)
# For Docker, use host.docker.internal instead of localhost
OLLAMA_API_URL="http://localhost:11434"
LM_STUDIO_API_URL="http://localhost:1234"

# ============================================================
# File Upload Configuration
# ============================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# ============================================================
# Rate Limiting
# ============================================================
# Time window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================
# Logging
# ============================================================
# Log levels: error, warn, info, debug
LOG_LEVEL="info"

# ============================================================
# Email Configuration
# ============================================================
EMAIL_HOST="smtp.qq.com"
EMAIL_PORT="465"
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-app-password"
EMAIL_FROM="AI Ignite Note <your-email@example.com>"
FRONTEND_URL="http://localhost:3000"

# ============================================================
# PostgreSQL Configuration (for Docker Compose)
# ============================================================
POSTGRES_USER="aiignite"
POSTGRES_PASSWORD="aiignite_password"
POSTGRES_DB="ai_ignite_note"
POSTGRES_PORT="5432"

# ============================================================
# Application Ports (for Docker Compose)
# ============================================================
FRONTEND_PORT="3000"
BACKEND_PORT="4000"
